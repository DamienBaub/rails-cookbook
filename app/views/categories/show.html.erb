<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg"%>);">
  <h1><%= @category.name %></h1>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-item-center py-3">
    <h2>Recipes</h2>
    <%= link_to "Add a recipe", new_category_bookmark_path(@category), class: "btn btn-primary btn-font-white" %>
  </div>
<div>

<div class="card-container">
  <% @category.bookmarks.each do |bookmark| %>
    <div class="card-recipe">
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" %>
      <div class="py-1">
        <h3><%= bookmark.recipe.name.capitalize %></h3>
        <p><%= bookmark.recipe.description %></p>
      </div>
      <div class="card-recipe-infos">
        <h3>"<%= bookmark.recipe.comment %>"</h3>
        <h3><%= bookmark.recipe.rating %></h3>
      </div>
      <%= link_to "❌", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?", class: "delete-button-for-card" } %>
    </div>
  <% end %>
</div>

