<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg"%>);">
  <h1>Cookbook</h1>
  <p>Save your favourites recipes</p>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-item-center py-3">
    <h2>List of Categories</h2>
    <%= link_to "New category", new_category_path, class: "btn btn-primary btn-font-white" %>
  </div>
  <div class="card-container d-flex justify-content-between">
      <% @categories.each do |category| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= asset_path "banner2.jpg"%>);">
          <h3><%= link_to category.name.capitalize, category_path(category) %></h3>
          <p><%= category.recipes.length %> recipes</p>
          <%= link_to "âŒ", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-button-for-card" %>
        </div>
      <% end %>
  <div>
</div>
